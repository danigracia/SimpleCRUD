<!doctype html>
<html lang="es">
	<head>
		<!-- Required meta tags -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
		<link rel="stylesheet" href="stylesheets/search.css">
		<link rel="stylesheet" type="text/css"  href="stylesheets/common.css">
		<title>Peliculas</title>

	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-light bg-dark">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="nav-link color-white" href="/">Index</a>
					</li>
					<li class="nav-item">
						<a class="nav-link color-white" href="/crear">Nuevo <span class="sr-only"></span></a>
					</li>
				</ul>
			</div>
		</nav>
		<div class="container mt-4">
			<div class="row">
				<div class="col-12 col-lg-8 offset-lg-2">
					<h2 class="text-center pb-4">Listado de Peliculas</h2>
					<% if (typeof peliculas !== 'undefined' && peliculas.length > 0) { %>
					<input type="text" id="search" onkeyup="search()" placeholder="Buscar por titulo.." title="Escribe un titulo">
					<div id="searchTarget" class="list-group offset-lg-2 col-lg-8">
						<% peliculas.forEach(function(pelicula){ %>
						<a class="text-center list-group-item list-group-item-action" href="/ver/<%= pelicula._id %>"><%= pelicula.titulo %></a>
						<% }); %>
					</div>
					<p style="display: none;" id="error_no_data" class="text-center">Aun no existe esta pelicula, agregala.</p>
					<script>
						function search() {
							var input, filter, div, error, a, i, count = 0;
							error = document.getElementById("error_no_data");
							input = document.getElementById("search");
							filter = input.value.toUpperCase();
							div = document.getElementById("searchTarget");
							a = div.getElementsByTagName("a");

							for (i = 0; i < a.length; i++) {
								if (a[i].innerHTML.toUpperCase().indexOf(filter) > -1) {
									count ++;
									a[i].style.display = "";
								} else a[i].style.display = "none";
							}

							if(count == 0) error.style.display = "";
							else error.style.display = "none";
						}
					</script>
					<% }else{ %>
						<p class="text-center">Aun no hay peliculas.</p>
					<% } %>
				</div>
			</div>

		</div>
		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	</body>
</html>